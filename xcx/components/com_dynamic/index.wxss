/* components/community/com_dynamic/index.wxss */

.container {
  background: #fff;
  padding: 20rpx 36rpx;
  margin-bottom: 16rpx;
}

button {
  padding: 0;
  font-size: 26rpx;
  color: #909090;
  line-height: 1.2;
  display: flex;
  align-items: center;
}

.top {
  font-size: 28rpx;
  color: #333;
}

.size48 {
  font-size: 48rpx;
}

.mr20 {
  margin-right: 20rpx;
}

.mr60 {
  margin-right: 60rpx;
  display: flex;
  align-items: center;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  margin: 14rpx 0 26rpx;
}

.content-img {
  height: 222rpx;
  width: 222rpx;
  margin-bottom: 10rpx;
}

.content-img:not(:nth-child(3n)) {
  margin-right: 6rpx;
}

.img-box {
  display: flex;
  flex-wrap: wrap;
}

.content-data {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #909090;
  margin-top: 26rpx;
}

.content-data>view {
  display: flex;
  align-items: center;
}

.content-data>view>image {
  margin-right: 16rpx;
}

.icon-like {
  width: 30rpx;
  height: 28rpx;
}

.icon-comments {
  width: 28rpx;
  height: 25rpx;
}

.flex-1 {
  flex: 1;
}

.icon-del {
  width: 26rpx;
  height: 28rpx;
}

.icon-share {
  height: 28rpx;
  width: 28rpx;
  margin-right: 16rpx;
}

.member-img {
  height: 44rpx;
  width: 44rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.footer-member {
  display: flex;
  margin-top: 24rpx;
}

.dynamic-page-box {
  background: #f2f2f2;
  padding: 12rpx;
}

.cover-img {
  width: 100%;
  height: 284rpx;
  border-radius: 8rpx;
}

.icon-exit {
  height: 36rpx;
  width: 30rpx;
}

.dynamic-info {
  font-size: 28rpx;
  color: #282828;
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin: 18rpx 0;
}

.top2 {
  display: flex;
  align-items: center;
}

.header {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.school-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.date-2 {
  font-size: 24rpx;
  color: #3883fa;
  margin-top: 4rpx;
}
