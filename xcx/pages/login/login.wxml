<!--pages/login/login.wxml-->
<form>
<van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="用户名"
    icon="question-o"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
    bind:input='userInput'
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
     bind:input='passInput'
  />
</van-cell-group>
<view class='btn'>
  <van-button size="large"
  bind:click='login'
  disabled="{{!bool}}"
   type="primary">登陆</van-button>
</view>
</form>