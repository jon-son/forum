/* pages/detail/detail.wxss */
page{
  background: #f4f4f4;
  padding-top: 2rpx;
}
.textarea-box{
  background: #fff;
  margin-top: 20rpx;
  padding:0 30rpx;
}
.textarea-box textarea{
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
}
.avtivity-title {
  font-size: 32rpx;
  color: #282828;
  padding: 20rpx 0 20rpx;
  display: flex;
  align-items: center;
}

.line {
  width: 6rpx;
  height: 36rpx;
  background: linear-gradient(180deg, rgba(97, 230, 253, 1) 0%, rgba(50, 200, 250, 1) 100%);
  border-radius: 3rpx;
  margin-right: 16rpx;
}
.submit{
 background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 30rpx;
  display: flex;
  justify-content: center;
  line-height: 80rpx;
}

.reback{
  color: #777;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.reback>text{
  margin-right: 40rpx;
}
.reback-name{
  color: #07c160;
  margin-left: 10rpx;
}